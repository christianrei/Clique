<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_material_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="                                                                             This is a chatroom service to talk and draw with people around you!"
        android:textColor="#6495ED"
        android:id="@+id/help1"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Clique!
        "
        android:textColor="#6495ED"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/help2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_no"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/help2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="                                                                             The text you have entered in the screen name text box is what people will see you as."
        android:id="@+id/help3"
        android:layout_below="@+id/help1"
        android:textColor="#6495ED"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="                                                                             You will see all available rooms in your area in the table on the main menu. You can organize it in the options"
        android:id="@+id/help4"
        android:layout_below="@+id/help3"
        android:textColor="#6495ED"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="                                                                             If there are no rooms you can create one with the Create Room button! Make it private with a password or public for everyone to chat!"
        android:id="@+id/help5"
        android:textColor="#6495ED"
        android:layout_below="@+id/help4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
